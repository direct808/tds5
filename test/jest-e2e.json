{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest",
    "^.+\\.js$":["babel-jest", { "extends": "./test/babel.config.js" }]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!ip6)"
  ],
  "testTimeout": 30000,
  "globalSetup": "<rootDir>/utils/jest.global-setup.ts",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  }
}
